<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view_for_next_birthday"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="11dp"
    card_view:cardElevation="5dp"
    android:layout_margin="5dp"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true">

    <LinearLayout
        android:background="@drawable/background"
        style="@style/extraAndUpcomingBirthdayInnerLayout">

        <TextView
            android:id="@+id/nextTitle"
            android:background="@drawable/title_background_border"
            style="@style/titleTextView"
            android:text="@string/RemainingNextBirthday" />

        <include layout="@layout/next_birthday"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>