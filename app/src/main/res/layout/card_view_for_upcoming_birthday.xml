<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="11dp"
    card_view:cardElevation="5dp"
    android:layout_margin="5dp"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true">

    <LinearLayout
        android:background="@drawable/background"
        style="@style/extraAndUpcomingBirthdayInnerLayout">

        <TextView
            android:id="@+id/upcomingBirthday"
            android:background="@drawable/title_background_border"
            android:text="@string/upcoming_birthday"
            style="@style/titleTextView" />

        <include layout="@layout/upcoming_birthdays"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>