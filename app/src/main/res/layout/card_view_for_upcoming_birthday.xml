<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_in_card"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="11dp"
    card_view:cardElevation="@dimen/cardElevation">

    <LinearLayout
        style="@style/extraAndUpcomingBirthdayInnerLayout"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/upcomingBirthday"
            style="@style/titleTextView"
            android:background="@drawable/background_for_title"
            android:text="@string/upcoming_birthday" />

        <include layout="@layout/view_upcoming_birthdays" />

    </LinearLayout>

</androidx.cardview.widget.CardView>